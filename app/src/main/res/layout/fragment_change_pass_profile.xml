<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountfragments.ChangePassProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/relative_change_pass">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/change_pass_profile_back"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Back"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/thesansarab_semilight"
            android:textSize="@dimen/_13ssp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_change_pass"
        android:layout_below="@+id/relative_change_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:fontFamily="@font/thesansarab_bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18ssp"
            android:layout_marginStart="@dimen/_20sdp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/linear_background"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_weight="0.3"
                android:text="Current Password"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/thesansarab_light"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/change_pass_profile_current_pass"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@null"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColor="@color/text_view_color"
                android:textColorHint="@color/edit_text_color"
                android:textSize="@dimen/_12ssp"
                android:textDirection="rtl"
                android:fontFamily="@font/thesansarab_light"
                />





        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/back_ground">

        </View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_weight="0.3"
                android:text="New Password"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/thesansarab_light"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:fontFamily="@font/thesansarab_light"
                android:id="@+id/change_pass_profile_new_password"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@null"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColor="@color/text_view_color"
                android:textColorHint="@color/edit_text_color"
                android:textSize="@dimen/_12ssp"
                android:textDirection="rtl"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/back_ground">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_weight="0.3"
                android:text="Confirm Password"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/thesansarab_light"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/change_pass_profile_confirm_password"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@null"
                android:hint="Confirm Password "
                android:textAlignment="viewStart"
                android:inputType="textPassword"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:textColorHint="@color/edit_text_color"
                android:textDirection="rtl"
                android:fontFamily="@font/thesansarab_light"
                />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/change_pass_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:fontFamily="@font/thesansarab_plain"
        android:text="Change"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        android:layout_marginBottom="@dimen/_15sdp"
        />


</RelativeLayout>