<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountfragments.ConnectWithUsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/relative_contact_with_us">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contact_with_us_back"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Back"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/thesansarab_semilight"
            android:textSize="@dimen/_13ssp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_contact_with_us"
        android:layout_below="@+id/relative_contact_with_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact With Us"
            android:fontFamily="@font/thesansarab_bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18ssp"
            android:layout_marginStart="@dimen/_20sdp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_background"
        android:orientation="vertical"
        android:layout_below="@+id/linear_contact_with_us"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_weight="0.3"
                android:text="Title of Massage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/thesansarab_light"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/contact_with_us_title_massage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@null"
                android:hint="Title of Massage"
                android:inputType="text"
                android:textAlignment="textEnd"
                android:textColor="@color/text_view_color"
                android:textColorHint="@color/edit_text_color"
                android:textSize="@dimen/_12ssp"
                android:textDirection="rtl"
                android:fontFamily="@font/thesansarab_light"
                />





        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/back_ground">

        </View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/thesansarab_light"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/thesansarab_light"
                android:id="@+id/contact_with_us_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="2000"
                android:maxLines="4"
                android:background="@null"
                android:inputType="text"
                android:textAlignment="textEnd"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/_12ssp"
                android:textDirection="rtl"
                />





        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/contact_with_us_send_massage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:fontFamily="@font/thesansarab_plain"
        android:text="Send Massage"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        android:layout_marginBottom="@dimen/_15sdp"
        />

</RelativeLayout>