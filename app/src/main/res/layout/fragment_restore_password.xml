<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userfragments.RestorePasswordFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/welcomeText"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Back"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/thesansarab_semilight"
            android:textSize="@dimen/_13ssp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restore password"
            android:fontFamily="@font/thesansarab_bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18ssp"
            android:layout_marginStart="@dimen/_20sdp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_minus18sdp"
        android:orientation="horizontal"
        android:background="@drawable/linear_background"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="0.3"
            android:text="Email Address"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_view_color"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/thesansarab_light"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/restore_pass_email"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@null"
            android:hint="Email Address"
            android:fontFamily="@font/thesansarab_light"
            android:inputType="textEmailAddress"
            android:textAlignment="textEnd"
            android:textColor="@color/text_view_color"
            android:textColorHint="@color/edit_text_color"
            android:textSize="@dimen/_12ssp"
            android:textDirection="rtl"
            />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="Enter the email you registered with to receive the password mapping message"
        android:textSize="@dimen/_7ssp"
        android:fontFamily="@font/thesansarab_light"
        android:gravity="center"
        />

    <Button
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/send_appointment_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:fontFamily="@font/thesansarab_plain"
        android:text="Send the appointment code"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        />

</LinearLayout>