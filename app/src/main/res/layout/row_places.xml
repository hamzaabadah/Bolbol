<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/linear_background"
    android:id="@+id/linear_place_row"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/place_logo"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/ic_launcher_background"
        />

    <LinearLayout
        android:layout_toEndOf="@id/place_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_centerVertical="true"

        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tapon restaurant"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/thesansarab_light"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tapon resturant"
            android:fontFamily="@font/thesansarab_plain"
            android:textSize="@dimen/_11ssp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tapon"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tapon"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>
    

</RelativeLayout>